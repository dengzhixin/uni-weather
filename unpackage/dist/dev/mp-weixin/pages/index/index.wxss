:not(not) {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
.containner {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-flex-wrap: nowrap;
          flex-wrap: nowrap;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}
.containner .top {
    width: 100%;
    background: -webkit-linear-gradient(#4c8ce2, #83c0f3);
    background: linear-gradient(#4c8ce2, #83c0f3);
    padding: 20rpx;
    text-align: center;
    color: #FFFFFF;
}
.containner .top .title {
      font-size: 20pt;
}
.containner .top .time {
      opacity: 0.6;
      font-size: 14pt;
}
.containner .top .weather {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-justify-content: space-around;
              justify-content: space-around;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.containner .top .weather .temperature {
        font-size: 40pt;
}
.containner .top .weather .weatherIcon {
        width: 300rpx;
        height: 300rpx;
        margin: 30rpx 0;
}
.containner .top .tip {
      font-size: 14pt;
      opacity: 0.6;
}
.containner .top .canvasBox {
      width: 100%;
      height: 160rpx;
      overflow: hidden;
}
.containner .top .canvasBox .canvasTemperature {
        width: 100%;
        height: 200rpx;
        background-color: transparent;
}
.containner .list {
    width: 100%;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    overflow-y: scroll;
}
.containner .list .list_item {
      height: 150rpx;
      width: 100%;
      color: #000000;
      background-color: #FFFFFF;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      padding: 20rpx;
}
.containner .list .list_item .left {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
}
.containner .list .list_item .left .weatherIcon {
          width: 100rpx;
          height: 100rpx;
}
.containner .list .list_item .left .weakday {
          padding-left: 40rpx;
}
.containner .list .list_item .right .min-temperature {
        padding-right: 20rpx;
}
.containner .list .list_item:nth-child(2n) {
      background-color: #F6F9FE;
}

